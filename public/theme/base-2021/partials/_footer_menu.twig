        <nav class="list-none mb-12">
            <ul>
                {% for item in item.submenu %}
                    <li><a class="hover:underline capitalize" href="{{ item.uri }}">{{ item.label|default(item.title) }}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </div>
    {% endif %}
{% endfor %}  

