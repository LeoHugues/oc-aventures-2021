<div class="w-full sm:w-60 p-4 relative">
    <h2 class="text-sable font-semibold leading-tight text-center mb-3 uppercase">GENERAL</h2>
    <nav class="list-none mb-12">
        <ul>
            {% for item in menu %}
                {% if not item.submenu %}
                    <li><a class="hover:underline capitalize" href="{{ item.uri }}">{{ item.label|default(item.title) }}</a></li>
                {% endif %}
            {% endfor %}  
        </ul>
    </nav>
</div>

